{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Topology",
    "type": "object",
    "properties": {
        "id": {
            "description": "This is supposed to be an unique identifier, starting with urn:ogf:networking:global",
            "type": "string"
        },
        "name": {
            "description": "This is supposed to be a readable name",
            "type": "string"
        },
        "time_stamp": {
            "type": "string",
            "format": "date-time"
        },
        "version": {
            "description": "This is supposed to be in ISO format",
            "type": "number",
            "minimum": 0,
        },
        "domain_service": {
            "$ref": "Service"
        },
        "nodes": {
            "type": "array",
            "items": [
                {
                    "$ref": "Node"
                }
            ]
        },
        "links": {
            "type": "array",
            "items": [
                {
                    "$ref": "Link"
                }
            ]
        }
    },
    "required": ["id", "name", "version","time_stamp","nodes", "links"]
}